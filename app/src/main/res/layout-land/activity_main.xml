<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.razormist.simplequizapp.MainActivity">

    <Button
        android:id="@+id/btn_one"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="473dp"
        android:layout_marginBottom="123dp"
        android:text="Github" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_four"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="473dp"
        android:layout_marginBottom="8dp"
        android:text="Quiz" />

    <Button
        android:id="@+id/btn_four"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="473dp"
        android:layout_marginBottom="13dp"
        android:text="My Profile" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="494dp"
        android:layout_height="102dp"
        android:gravity="center_horizontal"
        android:paddingTop="50sp"
        android:text="بِسْمِ اللهِ الرَّحْمٰنِ الرَّحِيْمِ "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landscape View" />

</RelativeLayout>